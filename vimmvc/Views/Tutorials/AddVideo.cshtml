@model vimmvc.ViewModels.VideoViewModel
@{
    Layout = "_GlobalAdminLayout";
    var message = ViewBag.Message as string;
}

<style>
    .show-modal{
        display: block;
    }
</style>
<form enctype="multipart/form-data" asp-action="AddVideo" asp-controller="Tutorials">
    <div id="videoModal" class="modal show-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body form">
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Video</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.title">Video Title:</label>
                        <input type="text" asp-for="@Model.title" placeholder="Enter video title" />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.name">Video Url:</label>
                        <input type="text" asp-for="@Model.name" placeholder="Please enter video link here" />
                    </div>

                    <div class="form-group">
                        <label class="label" asp-for="@Model.duration">Length:</label>
                        <input type="text" asp-for="@Model.duration" placeholder="Enter video duration" />
                    </div>

                    <div class="modal-footer">
                        <button style="background: #E7AB3C !important; border: none;" type="submit" class="btn btn-primary">Save changes</button>
                        <button style="background: darkred; border: none;" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>