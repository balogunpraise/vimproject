<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Virtual Institute of Music</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/revamp_project.styles.css" asp-append-version="true" /> *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@500&family=Poppins:wght@600;700&family=Rubik:wght@400;500&display=swap" rel="stylesheet">
</head>
<body id="top">
    <header class="header" data-header>
        <div class="container">

            <div class="overlay" data-overlay></div>

            <a asp-action="NewIndex" asp-controller="Home" class="logo">
                @* <img src="~/img/logo.jpg" alt="Eduland logo" width="50" height="100"> *@
                <h1 class="h2 about-title" style="margin-bottom: 0px; color: teal;">V.I.M</h1>
            </a>

            <button class="menu-open-btn" data-menu-open-btn>
                <ion-icon name="menu-outline"></ion-icon>
            </button>

            <nav class="navbar" data-navbar>

                <button class="menu-close-btn" data-menu-close-btn>
                    <ion-icon name="close-outline"></ion-icon>
                </button>

                <a href="#" class="logo">
                    <img src="~/img/logo.jpg" alt="VIM logo">
                </a>

                <ul class="navbar-list">

                    <li>
                        <a asp-controller="Curriculum" asp-action="Index" class="navbar-link">VIM Curriculum</a>
                    </li>

                    <li>
                        <a asp-controller="Courses" asp-action="Index" class="navbar-link">Courses</a>
                    </li>

                    <li>
                        <a asp-action="Index" asp-controller="Shop" class="navbar-link">Music Store</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>

                <a asp-action="Index" asp-controller="Event" class="btn btn-secondary">V.I.M Events</a>

            </nav>

        </div>
    </header>
    <main>
        @RenderBody()
    </main>

    <footer class="footer">

        <div class="footer-top">
            <div class="container">

                <div class="footer-brand">

                    <a href="#" class="logo">
                        <img src="~/img/logo.jpg" alt="VIM logo" style="border-radius: 50%;">
                    </a>

                    <p class="footer-text">
                        Our course are all levels friendly. Easy to understand and apply.
                    </p>

                    <ul class="social-list">

                        <li>
                            <a href="#" class="social-link">
                                <ion-icon name="logo-google"></ion-icon>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="social-link">
                                <ion-icon name="logo-twitter"></ion-icon>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="social-link">
                                <ion-icon name="logo-instagram"></ion-icon>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="social-link">
                                <ion-icon name="logo-linkedin"></ion-icon>
                            </a>
                        </li>

                    </ul>

                </div>

                <div class="footer-link-box">

                    <ul class="footer-list">

                        <li>
                            <p class="footer-link-title">Services</p>
                        </li>

                        <li>
                            <a href="#" class="footer-link">Music Tutoring</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">Mentorship</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">One-on-One Classes</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">Online Classes</a>
                        </li>

                    </ul>

                    <ul class="footer-list">

                        <li>
                            <p class="footer-link-title">Company</p>
                        </li>

                        <li>
                            <a href="#" class="footer-link">About</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">Our Team</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">VIM Events</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">Careers</a>
                        </li>

                    </ul>

                    <ul class="footer-list">

                        <li>
                            <p class="footer-link-title">More Info</p>
                        </li>

                        <li>
                            <a href="#" class="footer-link">Support</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">VIM Curriculum</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">Contact Us</a>
                        </li>

                    </ul>

                    <ul class="footer-list">

                        <li>
                            <p class="footer-link-title">Contact</p>
                        </li>

                        <li class="contact-item">
                            <span>Call : </span>

                            <a href="tel:5463876387" class="contact-link">+234 703 113 8277</a>
                        </li>

                        <li class="contact-item">
                            <span>Email : </span>

                            <a href="mailto:example@gmail.com" class="contact-link">support@virtimus.com</a>
                        </li>

                        @* <li class="contact-item">
                            <span>Address : </span>

                            <a href="#" class="contact-link">
                                <address>San Francisco, USA</address>
                            </a>
                        </li> *@

                    </ul>

                </div>

            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <p class="copyright">
                    &copy; 2023 <a href="">virtual institute of music</a>. All right reserved
                </p>
            </div>
        </div>

    </footer>





    <!--
