@{
    ViewData["Title"] = "StudentDashboard";
    Layout = "_StudentDashboardLayout";
    var courses = ViewBag.MyCourses;
}

<style>
    .heading{
        margin-top: 7px;
        margin-left: 10px;
        margin-bottom: 10px;
    }

    .heading::after{
        content: "";
        width: 20px;
        height: 5px;
        background: #1d7874;
    }

    .course-list-section{
        padding: 10px;
        height: 100%;
        overflow: scroll;
    }

    .course-list-card{
        height: 80px;
        width: 100%;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
        padding: 5px;
        display: flex;
        align-items: center;
        gap: 5px;
        margin-top: 10px;
    }

    .course-list-card .course-image{
        height: 70px;
        width: 70px;
        background: #1d7874;
    }

    @@media (min-width: 768px){

        .course-list-section {
            padding: 10px;
            display: flex;
            justify-content: center;
            gap: 20px;
            height: 100%;
            overflow: scroll;
        }

        .course-list-card {
            height: 150px;
            width: 40%;
            display: flex;
        }

        .course-list-card .course-image {
            height: 120px;
            width: 120px;
            background: #1d7874;
        }
    }
</style>
<h5 class="heading" style="text-align: center; margin-top: 50px;">My Courses</h5>

<div class="course-list-section">
    @if(courses.Count == 0)
    {
        <p style="text-align: center">You haven't registered any course yet</p>
    }
    else
    {
        foreach (var course in courses)
        {
            <div class="course-list-card" style="position: relative">
                <a asp-action="Watch" asp-controller="Tutorials" asp-route-courseId="@course.Course.Id"
                style="position: absolute; top: 10px; right: 10px" title="watch videos">
                    <i class="bi bi-eye-fill"></i>
                </a>
                
                <div class="course-image">
                    <img src="@course.Course.ImageUrl" style="width: 100%; height: 100%"/>
                </div>
                <div class="course-details">
                    <h3>@course.Course.Name</h3>
                    <p>@course.Course.Description</p>
                </div>
            </div>
        }
    }
      
</div>