@using Microsoft.AspNetCore.Identity
@using Core.Application.Interfaces
@using Core.Entities
@using vimmvc.Services
@inject UserManager<ApplicationUser> UserManager;
@inject SignInManager<ApplicationUser> SignInManager;
@inject CourseService courseRepo;



<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" />
	<link rel="stylesheet" href="~/css/studentarea.css" />
	<title>VIM - Student Area</title>
</head>
<body>
	<aside class="sidebar">
		<div class="sidebar-header">
			<h1>VIM</h1>
			<i class="bi bi-x-circle close"></i>
		</div>
		<div class="sidebar-icons">
			<ul>
				<li><a asp-action="Index" asp-controller="Home">Home</a></li>
				<li><a asp-action="Index" asp-controller="Courses">Courses</a></li>
				<li><a asp-action="Index" asp-controller="StudentDashboard">Tutorials</a></li>
				<li><a href="">Assignments</a></li>
				<li><a href="">Materials</a></li>
				<li><a href="">Music score</a></li>
				<li><a href="">Curricullum</a></li>
				<li><a href="">Settings</a></li>
			</ul>
		</div>
	</aside>

	<div class="container">
		<div class="header">
			<i class="bi bi-list hamburger"></i>
			<h1>VIM</h1>
			<ul class="navlinks">
				<li><a asp-action="Index" asp-controller="Home">Home</a></li>
				<li><a a asp-action="Index" asp-controller="Courses">Courses</a></li>
				<li><a asp-action="Index" asp-controller="StudentDashboard">Tutorials</a></li>
				<li><a href="#">Assigments</a></li>
				<li><a href="#">Materials</a></li>
				
			</ul>
			<div class="icons">
				<i class="bi bi-bell"></i>
				<i class="bi bi-person-circle"></i>
			</div>
		</div>
		<div class="body">
			<div class="overlay"></div>
			@* <div class="welcome"></div> *@
			@RenderBody()
		</div>
		<div class="footer">
			<small>virtual institute of music</small>
		</div>
	</div>

	<script>
		const sidebar = document.querySelector('.sidebar')
		const hamburger = document.querySelector('.hamburger')
		const closebtn = document.querySelector('.close')
		const overlay = document.querySelector('.overlay')

		hamburger.addEventListener('click', () => {
			sidebar.classList.add('active')
			overlay.classList.add('overlay-active')
		})

		closebtn.addEventListener('click', () => {
			sidebar.classList.remove('active')
			overlay.classList.remove('overlay-active')
		})
	</script>
</body>
</html>
